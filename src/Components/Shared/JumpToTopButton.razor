@inherits Button
@inject IJSRuntime JsRuntime

<button id="button-@Id" @attributes=@BaseAttributes @onclick="OnButtonClick">
   
        <div class="row justify-content-center">
            <div id="button-image-zone-@Id" class="col-auto image-zone">
                <img id="button-image-@Id" @attributes=@ImageAttributes />
            </div>
            <div id="button-text-@Id" class="col-auto button-text">@Text</div>
        </div>
    
</button>

<script>
    function OnScrollEvent()
    { 
        document.documentElement.scrollTop = 0;
    }
</script>