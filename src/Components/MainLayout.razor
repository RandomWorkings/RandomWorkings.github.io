@using RandomWorkings.github.io.Components.Shared
@inherits LayoutComponentBase

<IconStore/>

<header id="header" class="navbar navbar-expand-lg sticky-top">
    <NavBar/>
</header>
<div id="body" class="container-xxl mt-3 my-md-4">
    <aside id="pages" class="sidebar">
        <SideBar/>
    </aside>
    <main id="content" class="p-4">
        @Body
    </main>       
</div>
<footer id="footer" class="py-4 py-md-5">
    <div class="container py-4 py-md-5 px-4 px-md-3">
        <div class="row">
            <ImageButton
                Id="jump-to-top"
                Text="Back To Top"
                Src="images/icons/common/icon-up-angles.svg"
                Width="25px"
                Height="25px"
                AlternativeText="Double chevron pointing upward"
                Href="#header"
                TitleAttribute="Link to pull you up to top of page"
            ></ImageButton>
        </div>
    </div>
</footer>