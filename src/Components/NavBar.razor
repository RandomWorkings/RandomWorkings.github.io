@using RandomWorkings.github.io.Components.Shared;
@inherits Component

<header id="header" class="navbar navbar-expand-lg sticky-top">

    <nav id="navbar" class="container-xxl flex-wrap flex-lg-nowrap" aria-label="Main navigation">
   
        <div id="sidebar-toggler" class="d-flex justify-content-start">
            <button class="navbar-toggler p-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar" aria-controls="sidebar" aria-label="Toggle Side Navigation Pane">
                <svg class="bi" aria-hidden="true"><use xlink:href="#hamburger"></use></svg>
                <span class="d-none fs-6 pe-1">Browse</span>
            </button>
        </div>

        <a id="navbar-brand"  class="navbar-brand p-0 me-0 me-lg-2" href="/" aria-label="Random Workings">
            <img src="images/icons/random-workings/rw-logo.svg" width="100" alt="Random Workings logo" loading="lazy" />
        </a>

        <div id="navbar-toggler" class="d-flex justify-content-end">
            <button class="navbar-toggler d-flex d-lg-none order-3 p-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#topbar" aria-controls="topbar" aria-label="Toggle Top Navigation Pane">
                <svg class="bi" aria-hidden="true"><use xlink:href="#three-dots"></use></svg>
            </button>
        </div>

        <div id="topbar" class="offcanvas-lg offcanvas-end flex-grow-1" tabindex="-1" aria-labelledby="topbarOffcanvasLabel" data-bs-scroll="true">

            <div class="offcanvas-header px-4 pb-0">
                <h5 class="offcanvas-title text-white" id="topbarOffcanvasLabel">Random Workings</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close" data-bs-target="#topbar"></button>
            </div>


            <div class="offcanvas-body p-4 pt-0 p-lg-0">

                <hr class="d-lg-none text-white-50">
                <h5 class="offcanvas-title text-white" id="NavbarOffcanvasLabel">Find Us Here:</h5>

                <ul class="navbar-nav flex-row flex-wrap bd-navbar-nav">
                    <li class="nav-item col-6 col-lg-auto">
                        <ImageButton
                            Id="youtube"
                            Text="YouTube"
                            Src="images/icons/social-media/brand-youtube.svg"
                            Width="25px"
                            Height="25px"
                            AlternativeText="Youtube Logo"
                            Href="https://www.youtube.com/channel/UCE_oP0PoaZSFqwWV9Bs0rTA/"
                            TitleAttribute= "Link to Youtube"
                        ></ImageButton>
                    </li>
                    <li class="nav-item col-6 col-lg-auto">
                        <ImageButton
                            Id="github"
                            Text="GitHub"
                            Src="images/icons/social-media/brand-github.svg"
                            Width="25px"
                            Height="25px"
                            AlternativeText="Github Logo"
                            Href = "https://github.com/RandomWorkings/"
                            TitleAttribute = "Link to GitHub"
                        ></ImageButton>
                    </li>
                    <li class="nav-item col-6 col-lg-auto">
                        <ImageButton
                            Id = "linktree"
                            Text = "Linktree"
                            Src = "images/icons/social-media/brand-linktree.svg"
                            Width = "25px"
                            Height = "25px"
                            AlternativeText = "Link Tree Logo"
                            Href = "https://linktr.ee/Random_Workings"
                            TitleAttribute = "Link to Linktree Reference Page"
                        ></ImageButton>
                    </li>
                </ul>

            </div>
        </div>

    </nav>

</header>